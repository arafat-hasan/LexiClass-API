# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=LexiClass API
VERSION=0.1.0
DESCRIPTION="API service for document classification"
DEBUG=false
ENVIRONMENT=development
PORT=8000

# Security
SECRET_KEY=your-super-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256
ALLOWED_HOSTS=*
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=lexiclass

# Redis and Celery
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Storage
STORAGE_PATH=/data
MODELS_DIR=models
INDEXES_DIR=indexes
DOCUMENTS_DIR=documents


# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Celery Settings
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_ENABLE_UTC=true
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_RETRY_BACKOFF=true
CELERY_TASK_RETRY_JITTER=true
CELERY_TASK_DEFAULT_RATE_LIMIT=100/m
CELERY_TASK_DEFAULT_RETRY_DELAY=3
CELERY_TASK_MAX_RETRIES=3
CELERY_TASK_SOFT_TIME_LIMIT=600
CELERY_TASK_TIME_LIMIT=1200
CELERY_WORKER_PREFETCH_MULTIPLIER=4
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000
CELERY_WORKER_SEND_TASK_EVENTS=true
